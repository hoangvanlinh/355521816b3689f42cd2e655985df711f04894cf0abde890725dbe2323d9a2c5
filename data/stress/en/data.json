              {"text": "Happy", "ipa": "/ˈhæ.pi/", "hl": "/<span style='color:red'>hæ</span>.pi/"},
              {"text": "Doctor", "ipa": "/ˈdɒk.tər/", "hl": "/<span style='color:red'>dɒk</span>.tər/"},
